installed.packages()
install.packages("shiny")
# 1. Lista de todos los paquetes necesarios
paquetes_necesarios <- c(
"tidyverse", "GGally", "corrplot", "Hmisc", "corrgram",
"ggcorrplot", "ppcor", "nortest", "tseries", "car",
"moments", "EnvStats", "MVN", "mvoutlier", "robustbase",
"gridExtra"
)
# 2. Identificar paquetes que NO están instalados
paquetes_nuevos <- paquetes_necesarios[!(paquetes_necesarios %in% installed.packages()[,"Package"])]
# 3. Instalar solo los paquetes que faltan
if(length(paquetes_nuevos)) {
cat("Instalando paquetes faltantes:", paste(paquetes_nuevos, collapse=", "), "\n")
install.packages(paquetes_nuevos)
} else {
cat("¡Excelente! Ya tienes todos los paquetes necesarios instalados.\n")
}
